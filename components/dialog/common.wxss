.dialog-mask{
  position: fixed;
  z-index: 99999 !important;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.dialog-container{
  position: fixed;
  z-index: 999999 !important;
  width: 500rpx;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  text-align: center;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 30rpx 50rpx 30rpx;
}

.dialog-header{
  height: 28rpx;
  padding-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: left;
  color:#98999a;
  width: 100%;
  font-size: 32rpx;
  line-height: 32rpx;
}
.dialog-header .dialog-close{
  width: 40rpx;
  text-align: left;
}
.dialog-header .dialog-title{
  flex: 1;
  text-align: right;
}


.dialog-content{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  line-height: 40rpx;
  padding-bottom: 50rpx;
}

.dialog-actions{
  height: 68rpx;
  background-color: #03b990;
  font-size:32rpx;
  color: #fff;
  line-height: 68rpx;
  width: 200rpx;
  text-align: center;
  border-radius: 8rpx;
}